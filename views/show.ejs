<% layout('/layout/main') -%>

    <% if (typeof data !=='undefined' ) { %>
        <table class="table table-hover align-middle mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Poster</th>
                    <th scope="col">Title</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Summary</th>
                    <th scope="col">Submitted URL</th>
                </tr>
            </thead>
            <tbody>
                <% for( let i = 0; i < data.length; i++ ) { %>
                    <tr>
                        <th scope="row">
                            <%= i + 1 %>
                        </th>
                        <td><img src="<%= data[i].poster %>" alt="poster image" style="width: 200px; height: 250px;"></td>
                        <td class="h3">
                            <%= data[i].title %>
                        </td>
                        <td class="h5">
                            <%= data[i].rating %>
                        </td>
                        <td>
                            <%= data[i].summary %>
                        </td>
                        <td>
                            <a href="<%= data[i].submittedURL %>"><%= data[i].submittedURL %></a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <form action="/download" method="post" class="mb-5">
            <button type="submit" class="btn btn-success">Download</button>
        </form>
        <% }else{ %>
            <div class="alert alert-warning mt-5" role="alert">
                <h4 class="alert-heading">
                    No Data Available
                </h4>
                <hr>
                <p class="mb-0">
                    Either you didn't submit the urls correctly or imdb website changed their css classes for the
                    required data
                </p>
            </div>
            <% } %>